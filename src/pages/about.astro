---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "About Me";

const identity = {
    firstName: "Jogan",
    country: "Murica",
    occupation: "American",
    hobbies: ["gaming", "tennis", "walks"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];

const happy = true;
const finished = true;
const goal = 3;

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---
<BaseLayout pageTitle={pageTitle}>
    <h2>This is my tutorial site!</h2>
    {happy && <p>Here a few facts about me:</p>}
    {finished && <p>This is the second paragraph!</p>}
    {goal === 3 ? <p>This is the third paragraph!</p> : <p>This isn't the third paragraph!</p>}
    <ul>
        <li>My name is {identity.firstName}.</li>
        <li>I live in {identity.country} and I work as an {identity.occupation}.</li>
        {identity.hobbies.length >= 2 &&
            <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}.</li>
        }
    </ul>
    <p>My Skills are:</p>
    <ul>
        {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>

  </BaseLayout>
	<head>
        <style define:vars={{skillColor, fontWeight, textCase}}>
            h1 {
              color: purple;
              font-size: 4rem;
            }
            .skill {
                color: var(--skillColor);
                font-weight: var(--fontWeight);
                font-transform: var(--textCase);
            }
          </style>

	</head>
	<body>
      
	</body>
</html>
